- var newsPage
- var count
- var sale
- bgClass = bgClass||''
section(class=bgClass+" news")
    .container
        if newsPage
            ul.news__nav
                li.news__nav-item.active
                    a(href="") Все записи
                li.news__nav-item
                    a(href="") Новости
                li.news__nav-item
                    a(href="") Акции
        else 
            .news__top.flex.jcsb
                h2 Новости и акции
                a(href="").news__more.btn.btn--icon.btn--more
                    span Все новости
                    i.i-more.i-more--orange
        ul.news__list.flex-wrap
            -for(var i = 0; i < count; i++)
                li.news__item
                    a(href="").news__link
                        .news__img
                            img(src="img/news-main/1.webp", alt="")
                        .news__date 26.08.2019
                        .news__text Компания Maknot™ приглашает посетитить выставочный стенд на международной автозапчастей
                if sale
                    li.news__item
                        a(href="").news__link
                            .news__img
                                img(src="img/news-main/1.webp", alt="")
                                .mark.mark--sale Акция
                            .news__date 26.08.2019
                            .news__text Компания Maknot™ приглашает посетитить выставочный стенд на международной автозапчастей
        if newsPage
            include ../blocks/pagination
        a(href="").news__more.news__more--bottom.btn.btn--icon.btn--more
            span Все новости
            i.i-more.i-more--orange