- var topTitle
- var topDescription

- var date
- var topSale

- var topBtn
- var topBtnText = topBtnText||'Скачать прайс'

- var rightColAbs
- var rightColBase
- var rightColImage = rightColImage||'img/detail/detail-news.png'

- var rowAlign

- var breadItems

.detail
    .detail__top
        .detail__top-element
        .container
            include breadcrubms
            .detail__top-row.flex-wrap(class=rowAlign)
                .detail__top-col
                    h1=topTitle
                    p=topDescription
                    .detail__top-info.flex.aic
                        if topSale
                            .mark.mark--sale Акция
                        if date
                            .detail__date=date
                        if topBtn
                            a(href="").btn.btn--icon.btn--orange
                                span=topBtnText
                                i.i-download
                if rightColAbs
                    .detail__top-col.detail__top-col--img
                        .detail__top-img.detail__top-img--abs
                            img(src=rightColImage, alt="")
                if rightColBase
                    .detail__top-col.detail__top-col--img
                        .detail__top-img
                            img(src="img/catalog-top.png", alt="")